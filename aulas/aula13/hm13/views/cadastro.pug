extends layout

block content
  h1 Cadastro
  if message
    div.alert.alert-success= message
  if error
    div.alert.alert-danger= error
  form(action="/cadastro" method="POST" enctype="multipart/form-data")
    div.form-group
      label(for="nome") Nome:
      input.form-control(type="text" id="nome" name="nome" required)
    div.form-group
      label(for="email") E-mail:
      input.form-control(type="email" id="email" name="email" required)
    div.form-group
      label(for="senha") Senha:
      input.form-control(type="password" id="senha" name="senha" required)
    div.form-group
      label(for="foto") Foto (Avatar):
      input.form-control-file(type="file" id="foto" name="foto" accept="image/*")
    button.btn.btn-primary(type="submit") Cadastrar
